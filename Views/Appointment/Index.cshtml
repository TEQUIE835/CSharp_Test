@model IEnumerable<Appointment>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteConfirmation(id) {
            Swal.fire({
                title: '¿Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Appointment/Delete/' + id;
                }
            });
        }

    </script>
    <script>
        @if (TempData["DeleteSuccess"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: '¡Success!',
                    text: '@TempData["DeleteSuccess"]'
                });
            </text>
        } else if (TempData["DeleteError"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: '@TempData["DeleteError"]'
                });
            </text>
        } else if (TempData["CreateSuccess"] != null)
        {
            <text>
                Swal.fire({
                    icon : 'success',
                    title : 'Success!',
                    text : '@TempData["CreateSuccess"]'
                })
            </text>
        }else if (TempData["CreateError"] != null)
        {
            <text>
                Swal.fire({
                    icon : 'error',
                    title : 'Error',
                    text : '@TempData["CreateError"]'
                })
            </text>
        }
        else if (TempData["EditError"] != null)
        {
            <text>
                Swal.fire({
                    icon : 'error',
                    title : 'Error',
                    text : '@TempData["EditError"]'
                })
            </text>
        }
        else if (TempData["EditSuccess"] != null)
        {
            <text>
                Swal.fire({
                    icon : 'success',
                    title : 'Success!',
                    text : '@TempData["EditSuccess"]'
                })
            </text>
        }
    </script>
}


<h1>Appointments list</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="AddAppointment">
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Doctor document</label>
                        <input type="text" class="form-control" name="DoctorDocument" required>
                    </div>
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Patient Document</label>
                        <input type="text" class="form-control" name="PatientDocument" required>
                    </div>
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Date</label>
                        <input type="date" class="form-control" name="Date" required>
                    </div>
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Hour</label>
                        <input type="time" class="form-control" name="Hour" required>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary w-100">Save information</button>
                </form>
            </div>
        </div>

    </div>
    <div class="col-md-9">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Doctor</th>
                <th>Patient</th>
                <th>Date</th>
                <th>Hour</th>
                <th>Status</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Doctor.Name</td>
                    <td>@item.Patient.Name</td>
                    <td>@item.Date</td>
                    <td>@item.Hour</td>
                    <td>@item.Status</td>
                    @if (item.Status == "Pending")
                    {
                        <td>
                            <a class="btn btn-primary" asp-action="Complete" asp-route-id="@item.Id">Complete</a>
                        </td>
                        <td>
                            <a class="btn btn-primary" asp-action="Cancel" asp-route-id="@item.Id">Cancel</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a class="btn btn-primary disabled" asp-action="Complete" asp-route-id="@item.Id">Complete</a>
                        </td>
                        <td>
                            <a class="btn btn-primary disabled" asp-action="Cancel" asp-route-id="@item.Id">Cancel</a>
                        </td>
                    }
                    
                    <td>
                        <button class="btn btn-danger"  onclick="deleteConfirmation(@item.Id)">Delete</button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>